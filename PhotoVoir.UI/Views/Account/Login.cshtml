@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 login-section-wrapper">
            <div class="login-wrapper my-auto">
                <h1 class="login-title">Log in</h1>
                <form action="/Account/Login" method="post">
                    <div class="form-group">
                        <!-- Email -->
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com">
                    </div>
                    <div class="form-group mb-4">
                        <!-- Password -->
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="enter your passsword">
                    </div>
                    <!-- Login Button -->
                    <input name="login" id="login" class="btn-block login-btn button" type="button" value="Login">
                </form>
                <!-- Forgot Password Button -->
                <a class="forgot-password-link" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                <!-- Register Here Button -->
                <p class="login-wrapper-footer-text">
                    Don't have an account?
                    <a class="text-reset" asp-area="" asp-controller="Account" asp-action="Register">Register here</a>
                </p>
            </div>
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="~/Images/Login/login.jpg" alt="login image" class="login-img">
        </div>
    </div>
</div>